{
  "name": "pwa-notes",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vue-tsc --noEmit && vite build --mode production",
    "dev": "vite --mode development",
    "prod": "vite --mode production",
    "serve": "vite preview",
    "test": "vitest --coverage",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:fix": "npm run lint:scripts:fix && npm run lint:styles:fix",
    "lint:scripts": "eslint src/**/*.{js,ts,vue}",
    "lint:scripts:fix": "eslint src/**/*.{js,ts,vue}",
    "lint:styles": "stylelint ./src/**/*.{scss,vue}",
    "lint:styles:fix": "stylelint ./src/**/*.{scss,vue} --fix",
    "prettier": "prettier src/**/*.{js,ts,tsx,vue,json} --write",
    "analyze": "analyze -c ./vite.config.ts -p 8889"
  },
  "dependencies": {
    "@primevue/themes": "^4.2.5",
    "primevue": "^4.2.5",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@config-federation/vue": "^0.1.2",
    "@formkit/auto-animate": "^0.8.2",
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^24.0.4",
    "@vitejs/plugin-vue": "^6.0.0",
    "dexie": "^4.0.11",
    "jiti": "^2.4.2",
    "pinia": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^0.16.2",
    "vite-plugin-pwa": "^1.0.0",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.10",
    "vuedraggable": "^4.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
